{
  "name": "play2",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "clean": "node scripts/cleanup.js",
    "test": "npm run clean && playwright test --workers=1",
    "test:headed": "npm run clean && playwright test --headed --workers=1",
    "bdd": "npm run clean && cucumber-js",
    "bdd:report": "npm run clean && cucumber-js --publish-quiet --format @cucumber/pretty",
    "bdd:ci": "npm run clean && cucumber-js --format json:cucumber-report.json --format html:cucumber-report.html",
    "test:ci": "npm run clean && playwright test --workers=1 --reporter=html"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "Playwright automation with BDD Cucumber",
  "devDependencies": {
    "@playwright/test": "^1.45.0",
    "@types/node": "^20.10.0",
    "@cucumber/cucumber": "^10.0.0"
  }
}

